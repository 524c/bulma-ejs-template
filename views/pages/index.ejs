  <script type="text/javascript">
    window.onload = enableBody

  var myPic = new Array(
    'pic1.jpeg',
    'pic2.jpeg',
    'pic3.jpeg',
    'pic4.jpeg',
    'pic5.jpeg',
    'pic6.jpeg'
  )

  function enableBody() {
    randomNum = Math.floor(Math.random() * myPic.length)
    document.getElementById('pic').src = '/img/' + myPic[randomNum]

    const pic = document.getElementById('home')
    pic.removeAttribute('style')
  }
  </script>
