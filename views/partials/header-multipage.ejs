  <script>
    $(document).ready(function() {
      $('#navbarMenu a[href^="#"]').on('click', function(e) {
        var target = this.hash;
        var $target = $(target);
        $('html, body').stop().animate({
          'scrollTop': $target.offset().top - 60
        }, 300, 'swing', function() {
          window.location.hash = target;
        });
      });
    });

    (() => {
      let current_location = location.pathname.split('/')[1]
      if (current_location == '') {
        current_location = 'home'
      }

      let menu_items = document
        .querySelector('header')
        .getElementsByClassName('navbar-menu')[0]
        .getElementsByTagName('li')

      for (let i = 0, len = menu_items.length; i < len; i++) {
        if (
          menu_items[i].getElementsByTagName('a')[0].innerText.toLowerCase() ===
          current_location
        ) {
          menu_items[i].className = 'is-active'
        }
      }
    })();
  </script>
